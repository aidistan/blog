---
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="zh">
<title type="text">{{ site.title }}</title>
<generator uri="https://github.com/mojombo/jekyll">Jekyll</generator>
<link rel="self" type="application/atom+xml" href="{{ site.baseurl }}/feed.xml" />
<link rel="alternate" type="text/html" href="{{ site.baseurl }}" />
<updated>{{ site.time | date_to_xmlschema }}</updated>
<id>{{ site.baseurl }}/</id>
<author>
  <name>{{ site.owner.name }}</name>
  <uri>{{ site.baseurl }}/</uri>
</author>

{% for post in site.posts limit:20 %}
<entry>
  <title type="html"><![CDATA[{{ post.title | cdata_escape }}]]></title>
 <link rel="alternate" type="text/html" href="{{ site.baseurl }}{{ post.url }}" />
  <id>{{ site.baseurl }}{{ post.id }}</id>
  <updated>{% if post.modified %}{{ post.modified | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</updated>
  <published>{{ post.date | date_to_xmlschema }}</published>
  <author>
    <name>{{ site.owner.name }}</name>
    <uri>{{ site.baseurl }}</uri>
  </author>
  <content type="html">{{ post.content | xml_escape }}</content>
</entry>
{% endfor %}
</feed>
