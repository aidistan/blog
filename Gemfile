source 'https://rubygems.org'

ruby '2.7.6'

gem 'github-pages'

group :development do
  # Use Rake to organize tasks
  gem 'rake'

  # Use sshkit with airbrussh to execute commands
  gem 'airbrussh'
  gem 'sshkit'

  # Use Webrick to serve locally
  gem 'webrick'

  # Use dotenv to hold external tokens
  gem 'dotenv'

  # Use Notion API SDK
  gem 'notion-sdk-ruby'

  # Use Rubocop as linter
  gem 'rubocop'
  gem 'rubocop-rake'

  # For debug and profile
  gem 'debug'
  gem 'profile'
end
